mixin header(header)
  if (header)
    h2.header=header
  else
    h2.header
      block

mixin kpdv(img, title, href)
  if(img)
    a.kdpv-link(href=href title=title)
        img.img(src=img, height="150" alt=title loading="lazy")

mixin continue(href, title, text)
  a.continue(href=href title=title)=text

mixin pp-body(text, href, link, linkTitle)
  p=text
  if href
    p
      if link
        +continue(href, linkTitle, link)
      else
        +continue(href, linkTitle, 'Continue')

mixin pp(tags, header, description, href, link, img)
  div.pp

    +header()
      a.text(href=href title=header) #{header}
    +taglist(tags)
    +kpdv(img, header ,href)
    +pp-body(description, href, link, header)

mixin news(tags, header)
  div.pp
    +taglist(tags)
    +header(header)
    block